    <LinearLayout
        android:id="@+id/centsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/halfGauge"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="20dp"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/violin_key" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="cents: "
            />

        <TextView
            android:id="@+id/cents"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textSize="22dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/frequencyLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centsLinearLayout"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="20dp"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/frequency_short" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="frequency: "
            />

        <TextView
            android:id="@+id/frequency"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="0 hz"
            android:textAlignment="textEnd"
            android:textSize="22dp" />

    </LinearLayout>

